{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "devstral": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Devstral (local)",
      "options": {
        "baseURL": "http://127.0.0.1:11434/v1"
      },
      "models": {
        "mistralai/devstral-small-2-2512": {
          "name": "Devstral Small 2"
        }
      }
    }
  },
  "watcher": {
    "ignore": [
      "node_modules/**",
      ".pnp",
      "pnp.js",
      ".pnp.js",
      "coverage/**",
      "build/**",
      "dist/**",
      ".git/**",
      "*.log",
      "npm-debug.log*",
      "yarn-debug.log*",
      "yarn-error.log*"
    ]
  }
}
